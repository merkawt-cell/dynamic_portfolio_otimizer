import yfinance as yf
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from datetime import datetime, timedelta


tickers = ["SPY", "GLD", "AGG", "EEM", "VNQ", "BND", "XLF"]

# SPY : ETF S&P 500 (actions américaines grandes capitalisations)
# QQQ : ETF Nasdaq 100 (technologie)
# VTI : ETF Total Stock Market (toutes les actions américaines)
# TLT = ETF obligations long terme américaines
# GLD = ETF or
# ...

# TÉLÉCHARGEMENT DES DONNÉES
data = pd.DataFrame()
for ticker in tickers:
    try:
        temp = yf.download(ticker, period="5y", progress=False)

        # Vérifier si on a bien reçu des données
        if not temp.empty and 'Close' in temp.columns:
            data[ticker] = temp['Close']
            print(f"✅ {ticker} téléchargé")
    except:
        print(f"❌ Problème avec {ticker}")

if not data.empty:

    # CALCUL DES RENDEMENTS
    returns = data.pct_change().dropna()

    # corr() calcule la matrice de corrélation
    corr_matrix = returns.corr()

    # AFFICHER LA MATRICE DE CORRÉLATION
    plt.figure(figsize=(8, 6))
    sns.heatmap(corr_matrix,
                annot=True,
                cmap='coolwarm',
                center=0)
    plt.title('Corrélations entre ETF')
    plt.show()
